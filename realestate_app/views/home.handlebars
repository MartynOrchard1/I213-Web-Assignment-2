{{!-- views/home.handlebars --}}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/output.css">
    <title>Home</title>
</head>

<body class="bg-teal-100">

    {{!-- Nav --}}
    <section class="nav p-8 bg-teal-500 text-center text-white">
        <h1 class="text-4xl font-bold mb-2">Ready to move?</h1>
        <p class="text-lg">Find your next home in our extensive database of properties for sale and rent</p>
        <button class="mt-4 bg-pink-500 hover:bg-pink-600 text-white py-2 px-6 rounded-lg">Learn more about us</button>
    </section>

    <div class="flex">
        {{!-- Sidebar --}}
        <aside class="w-1/5 bg-white p-4">
            <h2 class="text-xl font-bold mb-4">Locations</h2>
            <ul class="space-y-2">
                {{!-- Display Locations Here --}}
                <a href="#" class="text-blue-500 hover:underline">Location 1</a>
                <a href="#" class="text-blue-500 hover:underline">Location 2</a>
                <a href="#" class="text-blue-500 hover:underline">Location 3</a>
                {{!-- Can add more if needed --}}
            </ul>
        </aside>

        {{!-- Property grid --}}
        <main class="w-4/5 p-8">
            <div class="grid grid-cols-5 gap-4">
                {{#each properties}}
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <img src="{{image_url}}" alt="Image of {{address}}" class="w-full h-32 object-cover">
                        <div class="p-4">
                            <strong class="block text-lg"> {{address}} </strong><br>
                            <p class="text-gray-600"> {{suburb}} </p>
                            <br>
                            <p class="text-blue-500 font-semibold"> ${{list_price}} </p>
                        </div>
                    </div>
                {{/each}}
            </div>
        </main>
    </div>
    
</body>

</html>