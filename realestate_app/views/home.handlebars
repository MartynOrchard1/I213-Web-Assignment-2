<section class="hero-section">
  <h1 class="hero-title">Ready to move?</h1>
  <p class="hero-subtitle">Find your next home in our extensive database of properties for sale and rent</p>
  <button class="learn-more-btn">Learn more about us</button>
</section> --}}

<body>

  <div class="container">
    <div class="wrapper">
      {{!-- Sidebar --}}
      <aside>
        <div class="sidebar-top">
          <h2>Locations</h2>
        </div>
        <ul>
          {{!-- Suburb List --}}
          {{#each suburbs}}
          <a href="/filter/{{suburb}}" class="location-link">{{suburb}}</a>
          {{#unless @last}}
          <hr>
          {{/unless}}
          {{/each}}
        </ul>
        <div class="sidebar-bot"></div>
      </aside>

      {{!-- Property grid --}}
      <main>
        <div class="property-grid">
          {{#each properties}}
          <div class="property-card">
            <div class="address">{{address}}</div> <!-- Address -->
            <img src="{{image_url}}" alt="Image of {{address}}" /> <!-- Image -->
            <div class="price">${{list_price}}</div> <!-- Price -->
          </div>
          {{/each}}
        </div>
      </main>
    </div>
  </div>

</body>


</html>